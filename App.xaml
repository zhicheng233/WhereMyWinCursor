<Application x:Class="WhereMyWinCursor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WhereMyWinCursor"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
             xmlns:markup="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:utils="clr-namespace:WhereMyWinCursor.Core.Utils">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Lang.en_US.xaml"/>
                <markup:ThemesDictionary Theme="Dark"/>
                <markup:ControlsDictionary/>
            </ResourceDictionary.MergedDictionaries>

            <utils:ThemeToIndexConverter x:Key="ThemeToIndexConverter" />
            <!-- tray icon -->
            <tb:TaskbarIcon x:Key="TrayIcon"
                            IconSource="Resources/icon.ico"
                            ToolTipText="{DynamicResource Tray_Tooltip}">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{DynamicResource Tray_Open_Setting}"
                                  Click="Tray_Open_Setting_Click"/>
                        <MenuItem Header="{DynamicResource Tray_Exit}"
                                  Click="Tray_Exit_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </ResourceDictionary>
    </Application.Resources>
</Application>